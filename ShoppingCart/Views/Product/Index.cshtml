@model IEnumerable<ShoppingCart.Models.productdetail>

@{
    ViewBag.Title = "Index";
}
@Html.Partial("PartialUser")
<h1>Filter</h1>
@*@model IEnumerable<ShoppingCart.Models.productdetail>*@
<br />
<br />
@using (Html.BeginForm("Search", "Login", FormMethod.Get))
{
    @Html.TextBox("Searching")
    <input type="submit" value="search" class="btn btn-primary" />
}

<br />
<table class="table  table-striped"
           <thead>
               <tr>
                   <th>
                       @Html.DisplayNameFor(model => model.product_id)
                   </th>
                   <th>
                       @Html.DisplayNameFor(model => model.description)
                   </th>
                   <th>
                       @Html.DisplayNameFor(model => model.price)
                   </th>
                   <th>
                       @Html.DisplayNameFor(model => model.brand.brand_name)
                   </th>
                   <th>
                       @Html.DisplayNameFor(model => model.category.category_name)
                   </th>
                   <th></th>
               </tr>
           </thead>
           <tbody>
               @if (Model.Count() == 0)
               {
               <tr>
                   <td colspan="3" style="color:red">
                       no matches found
                   </td>
               </tr>
               }
               else
               {
                   foreach (var item in Model)
                   {
                   <tr>
                       <td>@item.product_name</td>
                       <td>@item.description</td>
                       <td>@item.price</td>
                       <td>@item.brand.brand_name</td>
                       <td>@item.category.category_name</td>
                   </tr>
                   }
               }
</tbody>
</table>
